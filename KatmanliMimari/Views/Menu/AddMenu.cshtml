@using Entity.Concrete
@model List<Menu>
@{
    ViewBag.Title = "AddMenu";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<link href="~/Admin/css/style2.css" rel="stylesheet" />
<h2>Menü Ekle</h2>
@using (Html.BeginForm("AddMenu", "Menu", FormMethod.Post, new
{ @class = "form-group" }))
{

    @Html.Label("menuName")
    <br />
    @Html.TextBox("menuName", "", new { @class = "form-control" })
    <div id="menuName" class="validation-container">
        @Html.ValidationMessage("menuName")
    </div>
    <br />
    @Html.Label("Parent")
    <br />
    <select name="parentId" class="form-control">
        <option>Ana Menü</option>
        @foreach (var menu in Model)
        {
            <option value=@menu.menuId.ToString()>@menu.menuName</option>
        }

    </select>
    <br />
   
    <select name="durum" class="form-control">
        <option value=true> True</option>
        <option value=false>False</option>
    </select>
    <br />
    <input type="submit" value="Ekle" class="form-control bg-fuchsia mt-5" />
}


