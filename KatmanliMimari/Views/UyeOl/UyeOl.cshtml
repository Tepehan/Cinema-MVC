@using Entity.Concrete
@model Musteri
@{
    ViewBag.Title = "UyeOl";
    Layout = "~/Views/Shared/NavbarLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
<link href="~/www/web/uyeol/style.css" rel="stylesheet" />

<title>Üye Ol!</title>
<!-- main div -->

<style>
    .hide {
        display: none;
    }
</style>

<div>

    <!-- header div -->

    <div class="header row">
        <h1>CGV Cinema Club'a Üye Ol</h1>
    </div>
    <!-- header div end -->
    <!-- form div -->
    <form action="/UyeOl/UyeOl" method="post">

        <div class="formdiv container">

            <div class="adSoyad row">
                <div class="col-sm-6">
                    <input name="ad" class="form-control" id="nameInput" type="text" placeholder="Adın*">
                    <div id="nameInput" class="validation-container">
                        @Html.ValidationMessageFor(x => x.ad)
                    </div>
                </div>

                <div class="col-sm-6">
                    <input name="soyad" class="form-control" id="surnameInput" type="text" placeholder="Soyadın*">
                    <div id="surnameInput" class="validation-container">
                        @Html.ValidationMessageFor(x => x.soyad)
                    </div>
                </div>

            </div>
            <div class="epostaTelefon row">
                <div class="col-sm-6">
                    <input name="eMail" class="form-control" id="epostaInput" type="text" placeholder="E-posta*">
                    <div id="epostaInput" class="validation-container">
                        @Html.ValidationMessageFor(x => x.eMail)
                    </div>
                </div>


                <div class="col-sm-6">
                    <input name="telefonNumara" class="form-control" id="phoneInput" type="text"
                           placeholder="Cep Telefonu*">
                    <div id="phoneInput" class="validation-container">
                        @Html.ValidationMessageFor(x => x.telefonNumara)
                    </div>
                </div>

            </div>
            <div class="dogumTarihCinsiyet row">

